<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-sm p-8 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-semibold text-center mb-6">Login to Your Account</h2>

    <form id="loginForm" action="/login" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-medium">Email</label>
        <input 
          type="email" 
          name="email" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]" />
      </div>

      <div>
        <label class="block mb-1 font-medium">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]" />
      </div>

      <button 
        id="submitBtn"
        type="submit" 
        class="w-full bg-[#9d5b1e] text-white py-2 rounded hover:bg-[#7a461a] transition">
        Login
      </button>

      <!-- Loader -->
      <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-[#9d5b1e] border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>

    <p class="text-sm text-center text-gray-500 mt-4">
      Don't have an account? 
      <a href="/register" class="text-[#9d5b1e] hover:underline">Register</a>
    </p>
  </div>
</div>

<!-- Loading Script -->
<script>
  const form = document.getElementById('loginForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Logging in...';
  });
</script>

<%- include('partials/footer') %>
