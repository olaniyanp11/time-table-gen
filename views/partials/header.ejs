<!-- âœ… Flash Messages -->
<% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
  <div class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-[90%] max-w-md bg-green-500 text-white px-4 py-3 rounded shadow flex justify-between items-center mb-4" id="flash-container">
    <span><%= success_msg %></span>
    <button onclick="this.parentElement.remove()" class="text-white font-bold">&times;</button>
  </div>
<% } %>

<% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
  <div class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-[90%] max-w-md bg-red-500 text-white px-4 py-3 rounded shadow flex justify-between items-center mb-4" id="flash-container">
    <span><%= error_msg %></span>
    <button onclick="this.parentElement.remove()" class="text-white font-bold">&times;</button>
  </div>
<% } %>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-[90%] max-w-md bg-red-600 text-white px-4 py-3 rounded shadow mb-4"  id="flash-container">
    <ul class="list-disc pl-5">
      <% errors.forEach(function(error) { %>
        <li><%= error %></li>
      <% }); %>
    </ul>
    <button onclick="this.parentElement.remove()" class="text-white font-bold float-right mt-2">&times;</button>
  </div>
<% } %>
<script>
  setTimeout(() => {
    const flash = document.getElementById('flash-container');
    if (flash) flash.style.display = 'none';
  }, 5000);
</script>
