<%- include('../partials/header') %>

<div class="p-6">
  <h2 class="text-2xl font-bold mb-4">My Students - <%= department %></h2>

  <div class="overflow-x-auto bg-white rounded shadow">
    <table class="min-w-full border-collapse">
      <thead class="bg-[#9d5b1e] text-white">
        <tr>
          <th class="px-4 py-2 text-left">Name</th>
          <th class="px-4 py-2 text-left">Email</th>
          <th class="px-4 py-2 text-left">Level</th>
          <th class="px-4 py-2 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (students && students.length > 0) { %>
          <% students.forEach(student => { %>
            <tr class="border-b hover:bg-gray-100">
              <td class="px-4 py-2"><%= student.name %></td>
              <td class="px-4 py-2"><%= student.email %></td>
              <td class="px-4 py-2"><%= student.level %></td>
              <td class="px-4 py-2 text-center">
                <button onclick="openScoreModal('<%= student._id %>')" class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700">Score</button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="px-4 py-4 text-center text-gray-500">No students found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal for Scoring -->
<div id="scoreModal" class="fixed inset-0 bg-[#0000005d] hidden flex items-center justify-center z-50">
  <div class="bg-white p-6 rounded-lg shadow-lg w-96 relative">
    <h3 class="text-2xl font-semibold mb-4">Record Score</h3>
    <form method="POST" id="scoreForm">
      <input type="hidden" name="studentId" id="studentId">
      <div class="mb-4">
        <label class="block mb-1 font-medium">Course</label>
        <select name="courseId" class="w-full px-4 py-2 border rounded" required>
          <% courses.forEach(course => { %>
            <option value="<%= course._id %>"><%= course.code %> - <%= course.title %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-4">
        <label class="block mb-1 font-medium">Score</label>
        <input type="number" name="score" min="0" max="100" class="w-full px-4 py-2 border rounded" required>
      </div>
      <div class="flex justify-end space-x-2">
        <button type="button" onclick="closeScoreModal()" class="px-4 py-2 rounded border">Cancel</button>
        <button type="submit" class="bg-[#9d5b1e] text-white px-4 py-2 rounded hover:bg-[#7a441a]">Save</button>
      </div>
    </form>
    <button onclick="closeScoreModal()" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700">&times;</button>
  </div>
</div>

<script>
function openScoreModal(studentId) {
  document.getElementById('studentId').value = studentId;
  document.getElementById('scoreForm').action = `/lecturer/score/${studentId}`;
  document.getElementById('scoreModal').classList.remove('hidden');
}

  function closeScoreModal() {
    document.getElementById('scoreModal').classList.add('hidden');
  }
</script>

<%- include('../partials/footer') %>
