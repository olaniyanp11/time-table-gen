<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-sm p-8 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-semibold text-center mb-6">Sign Up</h2>

    <form action="/register" method="POST" class="space-y-4" id="signupForm">
      <!-- Full Name -->
      <div>
        <label class="block mb-1 font-medium">Full Name</label>
        <input 
          type="text" 
          name="name" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]" />
      </div>

      <!-- Role -->
      <div>
        <label class="block mb-1 font-medium">Role</label>
            <select 
          name="role" 
          id="role" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]">
          <option value="student" selected>Student</option>
        </select>
      </div>

      <!-- Matric Number (always required) -->
      <div>
        <label class="block mb-1 font-medium">Matric Number</label>
        <input 
          type="text" 
          name="matricNumber" 
          required
          placeholder="E.g. N/CS/23/0001"
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]" />
      </div>

      <!-- Password -->
      <div>
        <label class="block mb-1 font-medium">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]" />
      </div>

      <!-- Department -->
      <div id="departmentField">
        <label class="block mb-1 font-medium">Department</label>
        <input 
          type="text" 
          name="department" 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]" />
      </div>

      <!-- Level (students only) -->
      <div id="levelField" >
        <label class="block mb-1 font-medium">Level</label>
        <select 
          name="level" 
          class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#9d5b1e]">
          <option value="">Select Level</option>
          <option value="ND1">ND1</option>
          <option value="ND2">ND2</option>
          <option value="HND1">HND1</option>
          <option value="HND2">HND2</option>
        </select>
      </div>

      <!-- Submit -->
      <button 
        type="submit" 
        class="w-full bg-[#9d5b1e] text-white py-2 rounded hover:bg-[#7a461a] transition"
        id="submitBtn">
        Register
      </button>

      <!-- Loader -->
      <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-[#9d5b1e] border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>

    <p class="text-sm text-center text-gray-500 mt-4">
      Already have an account? 
      <a href="/login" class="text-[#9d5b1e] hover:underline">Login</a>
    </p>
  </div>
</div>

<script>
  const roleSelect = document.getElementById('role');
  const levelField = document.getElementById('levelField');
  const departmentField = document.getElementById('departmentField');

  roleSelect.addEventListener('change', () => {
    const role = roleSelect.value;

    if (role === 'student') {
      levelField.classList.remove('hidden');
      departmentField.classList.remove('hidden');
    } else if (role === 'lecturer') {
      levelField.classList.add('hidden');
      departmentField.classList.remove('hidden');
    } else if (role === 'admin') {
      levelField.classList.add('hidden');
      departmentField.classList.add('hidden');
    } else {
      levelField.classList.add('hidden');
      departmentField.classList.add('hidden');
    }
  });

  // loader effect
  const form = document.getElementById('signupForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Signing Up...';
  });
</script>

<%- include('partials/footer') %>
