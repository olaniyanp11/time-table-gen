<%- include('../partials/header') %>

<div class="p-6">
  <h2 class="text-2xl font-bold mb-4">My Courses</h2>

  <div class="overflow-x-auto bg-white rounded shadow">
    <table class="min-w-full border-collapse">
      <thead class="bg-[#9d5b1e] text-white">
        <tr>
          <th class="px-4 py-2 text-left">Code</th>
          <th class="px-4 py-2 text-left">Title</th>
          <th class="px-4 py-2 text-left">Department</th>
          <th class="px-4 py-2 text-left">Levels</th>
        </tr>
      </thead>
      <tbody>
        <% if (courses && courses.length > 0) { %>
          <% courses.forEach(c => { %>
            <tr class="border-b hover:bg-gray-100">
              <td class="px-4 py-2"><%= c.code %></td>
              <td class="px-4 py-2"><%= c.title %></td>
              <td class="px-4 py-2"><%= c.department %></td>
              <td class="px-4 py-2"><%= c.level.join(", ") %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="px-4 py-4 text-center text-gray-500">No courses assigned.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
